  <!-- SlidesJS Required: Start Slides -->
  <!-- The container is used to define the width of the slideshow -->
  <div class="container">
    <div id="slides">
      <%Dir.glob("app/assets/images/images/*").each do |pic|%>
        <%= image_tag "images/#{pic.split("/").last}"%>
      <% end %>
    </div>
  </div>
  <!-- End SlidesJS Required: Start Slides -->

  <!-- SlidesJS Required: Link to jQuery -->
  <%= javascript_include_tag 'http://code.jquery.com/jquery-1.9.1.min.js'%>
  <!-- End SlidesJS Required -->

  <!-- SlidesJS Required: Link to jquery.slides.js -->
  <%= javascript_include_tag 'jquery.slides.min.js'%>
  <!-- <script src="/assets/jquery.slides.min.js"></script>
  End SlidesJS Required -->

  <!-- SlidesJS Required: Initialize SlidesJS with a jQuery doc ready -->
  <script>
    $(function() {
      $('#slides').slidesjs({
        width: 940,
        height: 528,
        play: {
          active: true,
          auto: true,
          interval: 4000,
          swap: true
        }
      });
    });
  </script>
  <!-- End SlidesJS Required -->
